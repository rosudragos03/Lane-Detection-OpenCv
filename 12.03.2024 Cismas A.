import numpy as np
import cv2 as cv


video_path = "video.mp4" # Am dat ca input videoclipul, sa se conecteze pe web


cap = cv.VideoCapture(video_path)  # atribuim variabilei cap (Capture) videoclipul
                                    #am utilizat bucla while pt a citit frame urile din videoclip

while True:
    ret, frame = cap.read() # se citeste variabila - fiecare frame utilizeaza cap.read()
                            #nu frame uri => RET = FALSE

    if not ret:
        print("Nu pot primii frameuri (video terminat?). Sfarsit...")
        break

    gray = cv.cvtColor(frame, cv.COLOR_BGR2GRAY) # setare in nuante de gri a frame urilor
    edges = cv.Canny(gray, 100, 200) # creare contururi, pt lane detection



    height, width = edges.shape  # Definire regiune de interese (se vor exclude copacii)
    region_of_interest_vertices = [
        (0, height),
        (width * 0.4, height * 0.6),
        (width * 0.6, height * 0.6),
        (width, height),
    ]
    mask = np.zeros_like(edges)
    cv.fillPoly(mask, np.array([region_of_interest_vertices], np.int32), 255)
                     # Region of Interest = sa excluda parti din procesare (copaci, nasini)
    masked_edges = cv.bitwise_and(edges, mask)  #se aplica pt colturi cu aceasta comanda: cv.bitwise_and()

    # Afisare frameuri original si frame cu edge detection
    cv.imshow('Original Video', frame)
    cv.imshow('Edge Detection', masked_edges)

    if cv.waitKey(1) == ord('q'): # mod de incheiere al videourilor/programului
        break

cap.release() # se  elibereaza video ul capturat
cv.destroyAllWindows() # eliminare completa a tuturor ferestrelor deschise
